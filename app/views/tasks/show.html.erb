<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to 'Edit Task', edit_task_path(@task.id) %>

<p><%= link_to "Delete #{@task.title}", task_path(@task.id),
              method: :delete,
              data: { confirm: "Are you sure?" } %> </p>


<p><%= link_to 'Back to Tasks', tasks_path %></p>
